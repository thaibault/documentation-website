{
    "description": "documentationWebsite",
    "devDependencies": {
        "webOptimizer": "git+ssh://git@github.com/thaibault/webOptimizer.git",
        "jQuery-website": "git+ssh://git@github.com/thaibault/jQuery-website.git",
        "qunitjs": "*"
    },
    "license": "CC-BY-3.0",
    "name": "website",
    "version": "1.0.0",
    "keywords": ["documentation", "website", "project", "homepage", "page"],
    "files": ["source", "generateDummyDocumentation.sh"],
    "main": "source/coffeeScript/index.coffee",
    "repository": {
        "type": "git",
        "url": "git@github.io:thaibault/documentationWebsite.git"
    },
    "webOptimizer": {
        "debug": true, "library": false,
        "internalInjects": ["less/index", "coffeeScript/index"],
        "externalInjects": ["babel-polyfill"]
    },
    "scripts": {
        "lint": "webOptimizer lint",
        "clear": "rm source/index.jade; rm source/coffeeScript/index.coffee; webOptimizer clear",
        "build": "./generateDummyDocumentation.sh && webOptimizer build",
        "serve": "webOptimizer serve",
        "start": "webOptimizer serve"
    }
}
