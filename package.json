{
    "name": "website",
    "version": "1.0.0",
    "keywords": ["documentation", "website", "project", "homepage", "page"],
    "description": "documentationWebsite",
    "license": "CC-BY-3.0",
    "files": ["source", "generateDummyDocumentation.sh"],
    "main": "source/index.jade",
    "repository": {
        "type": "git",
        "url": "git@github.io:thaibault/documentationWebsite.git"
    },
    "dependencies": {
        "webOptimizer": "git+ssh://git@github.com/thaibault/webOptimizer.git",
        "jQuery-website": "git+ssh://git@github.com/thaibault/jQuery-website.git",
        "legalNotes": "git+ssh://git@github.com/thaibault/legalNotes.git"
    },
    "devDependencies": {"qunitjs": "*"},
    "webOptimizer": {
        "library": false,
        "injects": {
            "internal": ["less/index", "coffeeScript/index"],
            "external": ["babel-polyfill"]
        },
        "moduleAliases": {
            "bootstrap.less": "bootstrap/less/bootstrap",
            "genericStyle.less": "genericStyle/index.less",
            "jQuery-website.less": "jQuery-website/style.less"
        }
    },
    "scripts": {
        "lint": "webOptimizer lint",
        "clear": "webOptimizer clear",
        "preinstall": "mkdir --parents build && touch build/index.html",
        "postinstall": "npm run build",
        "mockupBuild": "./generateDummyDocumentation.sh && npm run build",
        "build": "webOptimizer build",
        "serve": "webOptimizer serve",
        "start": "npm run serve"
    }
}
